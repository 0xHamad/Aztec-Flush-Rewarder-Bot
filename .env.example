# ==========================================
# AZTEC FLUSH BOT - ADVANCED CONFIGURATION
# ==========================================

# ==========================================
# üîå RPC CONFIGURATION (Required)
# ==========================================

# HTTP RPC URL - Get from Alchemy/Infura
# Alchemy: https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# Infura: https://mainnet.infura.io/v3/YOUR_PROJECT_ID
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# WebSocket RPC URL (HIGHLY RECOMMENDED for 0.001s response time!)
# Alchemy: wss://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# Infura: wss://mainnet.infura.io/ws/v3/YOUR_PROJECT_ID
WS_RPC_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# ==========================================
# üîë WALLET CONFIGURATION (Required)
# ==========================================

# Your wallet's private key (with 0x prefix)
# ‚ö†Ô∏è SECURITY: Use a DEDICATED wallet for this bot only!
# ‚ö†Ô∏è Keep only 0.05-0.1 ETH in this wallet
# ‚ö†Ô∏è NEVER share this key or commit to GitHub!
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# ==========================================
# ‚ö° FLASHBOTS CONFIGURATION (Optional)
# ==========================================

# Enable Flashbots for precise block targeting
# Set to "true" to enable, "false" to disable
ENABLE_FLASHBOTS=true

# Flashbots Relay URL (Leave default unless you know what you're doing)
FLASHBOTS_RELAY_URL=https://relay.flashbots.net

# ==========================================
# üí∞ GAS & BUDGET CONFIGURATION
# ==========================================

# Maximum gas price you're willing to pay (in USD)
# $0.30 = approximately 100 gwei at current ETH prices
MAX_GAS_USD=0.30

# Minimum gas price to operate (avoid operating during spam)
MIN_GAS_USD=0.05

# Current ETH price in USD (auto-updates, but you can override)
ETH_PRICE_USD=3300

# ==========================================
# ‚è±Ô∏è TIMING CONFIGURATION
# ==========================================

# How many seconds BEFORE epoch start to send transaction
# Recommended: 20-30 seconds for Flashbots
# Lower = more competitive but riskier
SEND_TX_BEFORE_EPOCH=25

# Enable aggressive mode (multiple attempts per epoch)
# Set to "true" for 3 attempts per opportunity
AGGRESSIVE_MODE=true

# ==========================================
# üìä CONTRACT ADDRESSES (DO NOT CHANGE)
# ==========================================

FLUSH_REWARDER_ADDRESS=0x7C9a7130379F1B5dd6e7A53AF84fC0fE32267B65
ROLLUP_ADDRESS=0x603bb2c05D474794ea97805e8De69bCcFb3bCA12

# ==========================================
# üîß ADVANCED SETTINGS (Optional)
# ==========================================

# Genesis timestamp (Aztec Network genesis)
# DO NOT CHANGE unless Aztec network restarts
GENESIS_TIMESTAMP=1704067200

# Epoch duration in seconds (38.4 minutes)
EPOCH_DURATION_SECONDS=2304

# Slot duration in seconds
SLOT_DURATION_SECONDS=72

# How often to check status when far from epoch (seconds)
STATUS_CHECK_INTERVAL=30

# Enable detailed logging
DEBUG_MODE=false
